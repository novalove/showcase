	    			&lt;s:param name=&quot;echo&quot;&gt;remote content for textfield!&lt;/s:param&gt;
	    		&lt;/s:url&gt;
				&lt;sj:textfield 
					href=&quot;%{urlsimpleecho}&quot; 
					resizable=&quot;true&quot; 
					resizableGhost=&quot;true&quot; 
